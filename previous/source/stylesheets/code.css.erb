<%= Rouge::Themes::Base16::Solarized.render(:scope => '.highlight') %>

.highlight table {
  font-size: 1.3em;
  width: 90%;
}

.highlight td {
  padding: 8px 15px;
}

.gl { 
  width: 5%;
  /* background: #fafafa; */
  border-right: 1px solid #ddd;
  color: #999;
  
  /* Stop line numbers being visually selected */
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}
